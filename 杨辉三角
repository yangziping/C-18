#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i,j,n,a[20][20];
	scanf("%d",&n);
	for(i=0;i<n;i++)
	{
		for(j=0;j<=i;j++)
		{
			if(j==0||j==i)
			a[i][j]=1;
			else
			a[i][j]=a[i-1][j-1]+a[i-1][j];
		}
	}
	for(i=0;i<n;i++)
	{
	    for(j=0;j<=i;j++)
	    printf("%d ",a[i][j]);
	    printf("\n");
    }
    system("pause");
    return 0;
 } 
