#include <iostream>  
using std::cout;  
  
void itoa(int i,char b[])  
{  
    //   
    int figures  = 0;  
    int temp = i;  
    // calculate the figures  
    while(temp/10 > 1){  
        figures++;  
        temp /= 10;  
    }  
    cout <<"figures:"<<figures<<"\n";  
  
  
    for (int count = 0 ; count <= figures; ++count)  
    {  
        // get the mul_num  
        int mul_num = 1;  
        for (int i = 0; i < figures-count; ++i)  
        {  
            mul_num *= 10;  
        }  
              
        b[count] = i/mul_num%10 + '0';  
          
    }  
}  
  
int main()  
{  
    char b[32] = {0};  
    int i = 33454;  
    itoa(i,b);  
    cout<<b<<"\n";  
}  
