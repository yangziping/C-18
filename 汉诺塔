#include<stdio.h>
#include<stdlib.h>
int main()
{
	void z(int n,char one,char two,char three);
	int m;
	scanf("%d",&m);
	z(m,'A','B','C');
	system("pause");
	return 0;
 } 
 
 void z(int n,char one,char two,char three)
 {
 	void move(char x,char y);
 	if(n==1)
 	move(one,three);
 	else
 	{
 		z(n-1,one,three,two);
 		move(one,three);
 		z(n-1,two,one,three);
	 }
 }
 
 void move(char x,char y)
 {
 	printf("%c-->%c\n",x,y);
 }
